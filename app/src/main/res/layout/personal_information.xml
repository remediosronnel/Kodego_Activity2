<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal Information"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="409dp"
        android:layout_height="540dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:hint="First Name"
                android:textAlignment="center" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:paddingTop="10dp">

            <EditText
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:hint="M"
                android:textAlignment="center" />

            <EditText
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:hint="Address"
                android:textAlignment="center"

                />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="110dp">

            <EditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:hint="City"
                android:textAlignment="center" />

            <EditText
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:hint="State"
                android:textAlignment="center" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="160dp">

            <EditText
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:hint="Zip"
                android:textAlignment="center" />

            <EditText
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:hint="Home Phone"
                android:textAlignment="center" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="210dp">

            <EditText
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:hint="Cell Phone"
                android:textAlignment="center" />

            <EditText
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:hint="Email Address"
                android:textAlignment="center" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="260dp">

            <EditText
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:hint="Social Security Number"
                android:textAlignment="center" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="320dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:text="Are you a US Citizen?"
                android:textSize="20sp" />

            <CheckBox
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:text="Yes" />

            <CheckBox
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:text="No" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="380dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:text="Have you ever been convicted of a felony?"
                android:textSize="20sp" />

            <CheckBox
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10sp"
                android:text="Yes" />

            <CheckBox
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="No" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="450dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="240dp"
                android:layout_height="70dp"
                android:layout_marginLeft="5dp"
                android:text="If selected for employment are you willing to submit a pre-employment drug screening test?"
                android:textSize="15sp" />

            <CheckBox
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10sp"
                android:text="Yes" />

            <CheckBox
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="No" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginBottom="44dp"
        android:text="Instruction: Please fill the information needed"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>